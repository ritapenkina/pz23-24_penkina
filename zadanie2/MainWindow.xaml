<Window x:Class="pz2_penkina.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pz2_penkina"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="listBox1" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="468,0,0,0" FontSize="22"/>
        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Margin="10,54,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="238" Height="35" FontSize="22"/>
        <Label Content="Введите задачу:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="22"/>
        <Button x:Name="button1" Content="внести задачу" HorizontalAlignment="Left" Margin="30,115,0,0" VerticalAlignment="Top" FontSize="22" Height="43" Width="198" Click="button1_Click"/>
        <Button x:Name="button2" Content="удалить задачу" HorizontalAlignment="Left" Margin="30,166,0,0" VerticalAlignment="Top" FontSize="22" Height="38" Width="198" Click="button2_Click_1"/>

    </Grid>
</Window>
